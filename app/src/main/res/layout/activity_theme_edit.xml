<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/DividerLineGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_view_height"
        android:background="@color/White"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="毕设题目提交"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/DividerLineGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_view_height"
        android:background="@color/White"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="毕设题目"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入毕设名称"
            android:text=""
            android:textColor="@color/Black"
            android:textColorHint="@color/AssistantGray"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividerLineGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_view_height"
        android:background="@color/White"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="毕设类型"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_view_height"
            android:id="@+id/rl_project_type">

            <TextView
                android:id="@+id/tv_project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请选择毕设类型"
                android:clickable="true"
                android:textColor="@color/Black"
                android:textColorHint="@color/AssistantGray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/grade_submit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/type_choose"
                android:contentDescription="@null" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividerLineGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_view_height"
        android:background="@color/White"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="技术要求"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_require"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入技术要求"
            android:textColor="@color/Black"
            android:textColorHint="@color/AssistantGray"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/DividerLineGray" />

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_button_height"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/common_text_blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/DividerLineGray" />


</LinearLayout>
