<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/DividerLineGray" />

    <RelativeLayout
        android:id="@+id/rl_defence_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_view_height"
        android:layout_marginTop="10dp"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:duplicateParentState="true"
            android:text="答辩资格"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_defence_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:text="正常答辩"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividerLineGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/BackgroundColor"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/DividerLineGray" />

        <RelativeLayout
            android:id="@+id/rl_my_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_view_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:duplicateParentState="true"
                android:text="分组详情"
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_my_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp" />

            <ImageView
                android:id="@+id/my_group_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/personal_icon_more_gray"
                android:contentDescription="@null" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/DividerLineGray" />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_grade_skim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_view_height">

                <ImageView
                    android:id="@+id/grade_skim_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/personal_icon_more_gray"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:duplicateParentState="true"
                    android:text="成绩查看"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:text="0"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/DividerLineGray" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/BackgroundColor"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_grade_submit"
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="@dimen/common_view_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:duplicateParentState="true"
                android:text="课题成绩统计与提交"
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/grade_submit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/personal_icon_more_gray"
                android:contentDescription="@null" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/DividerLineGray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/DividerLineGray" />
        </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/BackgroundColor"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundColor"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>

